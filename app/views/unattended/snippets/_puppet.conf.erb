#kind: snippet
#name: puppet.conf
[main]
vardir = /var/lib/puppet
logdir = /var/log/puppet
rundir = /var/run/puppet
ssldir = \$vardir/ssl

[agent]
pluginsync      = true
report          = true
ignoreschedules = true
daemon          = false
ca_server       = <%= @system.puppet_ca_server %>
certname        = <%= @system.certname %>
environment     = <%= @system.environment %>
server          = <%= @system.puppetmaster %>
