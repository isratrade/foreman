  <h1>Oauth Login</h1>
  <div class="row">
    <div class="col-sm-7 col-md-6 col-lg-5 login">
      <%= form_tag oauth_authorization_path, :method => :get, :id => "login-form", :class=>"form-horizontal" do %>
          <div class="form-group">
            <%= label_tag "login", _("Username"), :class=>"col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= text_field_tag :login, 'admin', {:class=>"form-control", :focus_on_load => true} %>
            </div>
          </div>
          <div class="form-group">
            <%= label_tag "password", _("Password"), :class=>"col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= text_field_tag "password",'secret', :class=>"form-control" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-9 col-sm-offset-2">

              <%= text_field_tag "client_id",'2fe0dbe3ac39c5fa83135d5f4c8a46da091b8fd93770e4331d890967d4268b1a', :class=>"form-control" %>
              <%= text_field_tag "redirect_uri",'http://localhost:4200/', :class=>"form-control" %>
              <%= text_field_tag "response_type",'code', :class=>"form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-xs-offset-8 col-xs-4 submit">
              <%= submit_tag(_("Login").html_safe, :class => "btn btn-primary", :disable_with => _("Please wait...")) %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>