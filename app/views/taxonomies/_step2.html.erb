<% taxonomy_type = taxonomy_single %>

<%= form_for taxonomy do |f| %>
  <%= base_errors_for taxonomy %>
    <%= wizard_header 2, _("Create %s") % taxonomy_title, _("Select Systems"), _("Edit Properties") %>

  <% if @count_nil_systems > 0 %>
    <%= alert :header => _("Notice"),:class => 'alert-info',
              :text => _("Assigning systems to %{taxonomy_name} will also update %{taxonomy_name} to include all the resources that the selected systems are currently using.") % {:taxonomy_name => taxonomy.name }%>
    <%=  option_button _("Assign All"), assign_all_systems_taxonomy_path(taxonomy), :class => 'btn btn-success',:method => :post,
                       :help_inline => n_("Assign the %{count} system with no %{taxonomy_single} to %{taxonomy_name}", "Assign all %{count} systems with no %{taxonomy_single} to %{taxonomy_name}", @count_nil_systems) %
                           { :count => @count_nil_systems, :taxonomy_single => taxonomy_type, :taxonomy_name => taxonomy.name } %>
    <%=  option_button _("Manually Assign"), assign_systems_taxonomy_path(taxonomy), :class => 'btn',
                       :help_inline => _("Manually select and assign systems with no %s") % taxonomy_type %>
    <%=  option_button(_("Proceed to Edit"), edit_taxonomy_path(taxonomy), :class => 'btn',
                       :help_inline => _("Skip assign systems and proceed to edit %s settings") % taxonomy_type)%>
  <% end %>

<% end %>
