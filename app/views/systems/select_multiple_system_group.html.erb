  <%= f.select :id, [[_("Select system group"),"disabled"],[_("*Clear system group*"), "" ]] + SystemGroup.all.map{|h| [h.to_label, h.id]}.sort,{},
        :onchange => "toggle_multiple_ok_button(this)" %>
<% end %>
