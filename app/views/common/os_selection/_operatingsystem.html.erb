<%= fields_for item do |f| %>
  <%= select_f f, :medium_id, os_media, :id, :to_label,
    {:include_blank => blank_or_inherit_f(f, :medium)},
    {:help_inline => :indicator,
     :'data-type' => controller_name,
     :'data-ng-model' => 'hostgroup.medium',
     :'data-ng-options' => 'med.name for med in media'
    } %>
<%= f.hidden_field :medium_id, :value => "{{ hostgroup.medium.id }}" %>

  <%= select_f f, :ptable_id, os_ptable, :id, :to_label,
    {:include_blank => blank_or_inherit_f(f, :ptable)},
    { :label => _("Partition table"),
      :'data-ng-model' => 'hostgroup.ptable',
      :'data-ng-options' => 'pt.name for pt in ptables'
    } %>
<%= f.hidden_field :ptable_id, :value => "{{ hostgroup.ptable.id }}" %>

  <% if @operatingsystem and @operatingsystem.supports_image %>
    <%= render "common/os_selection/image_details", {:item => item} %>
  <% end %>
<% end %>
