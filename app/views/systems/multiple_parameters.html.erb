<%= render 'selected_systems', :systems => @systems %>

<% if @parameters.empty? %>
  <%= _('Sorry, these systems do not have parameters assigned to them, you must add them first.') %>
  <p><%= link_to _("Back to system list"), systems_path %></p>
<% else %>
  <%= form_tag update_multiple_parameters_systems_path({:system_ids => params[:system_ids]}) do %>
    <% for param in @parameters %>
      <%= text_field :name, param.name, :class => "input-xxlarge", :placeholder => param.name %>
    <% end %>
  <% end %>
<% end %>
