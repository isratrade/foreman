<%= render 'selected_systems', :systems => @systems %>

<%= form_for :environment, :url => update_multiple_environment_systems_path(:system_ids => params[:system_ids]) do |f| %>
    <%= f.select :id, [[_("Select environment"), "disabled"],
                        [_("*Clear environment*"), "" ],
                        [_("*Inherit from system group*"), "inherit"]] + Environment.all.map{|e| [e.name, e.id]},{},
                 :onchange => "toggle_multiple_ok_button(this)" %>
<% end %>
