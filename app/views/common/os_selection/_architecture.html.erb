<%= fields_for item do |f| %>
  <%= select_f f, :operatingsystem_id, arch_oss, :id, :to_label,
    {:include_blank => blank_or_inherit_f(f, :operatingsystem)},
    { :label => _("Operating system"),
      :help_inline => :indicator,
      :'data-ng-model' => 'hostgroup.operatingsystem',
      :'data-ng-options' => 'os.fullname for os in operatingsystems'
    }
  %>
  <%= f.hidden_field :operatingsystem_id, :value => "{{ hostgroup.operatingsystem.id }}" %>
<% end %>
