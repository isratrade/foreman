<%= fields_for item do |f| %>
  <%= select_f f, :subnet_id, domain_subnets, :id, :to_label,
    { :include_blank => domain_subnets.any? ? blank_or_inherit_f(f, :subnet) : _("No subnets")},
    { :label => _("Subnet"), :help_inline => :indicator,
      :'data-ng-model' => 'hostgroup.subnet',
      :'data-ng-options' => 'sub.name for sub in hostgroup.domain.subnets'
    }
  %>
  <%= f.hidden_field :subnet_id, :value => "{{ hostgroup.subnet.id }}" %>

<% end %>
