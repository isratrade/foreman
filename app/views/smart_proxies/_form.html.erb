<%= form_for @proxy do |f| %>
  <%= base_errors_for @proxy %>
  <% if show_taxonomy_tabs? %>
    <ul class="nav nav-tabs" data-tabs="tabs">
      <li class="active"><a href="#primary" data-toggle="tab"><%= _("Smart Proxy") %></a></li>
      <% if show_location_tab? %>
        <li><a href="#locations" data-toggle="tab"><%= _("Locations") %></a></li>
      <% end %>

      <% if show_organization_tab? %>
        <li><a href="#organizations" data-toggle="tab"><%= _("Organizations") %></a></li>
      <% end %>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="primary">
  <% end %>
        <%= text_f(f, :name) %>
        <%= text_f(f, :url, :size => "col-md-8" ) %>
  <% if show_taxonomy_tabs? %>
      </div>
      <% if show_location_tab? %>
        <div class="tab-pane" id="locations">
          <%= location_selects f, @proxy.location_ids, {:disabled => @proxy.used_location_ids} %>
        </div>
      <% end %>

      <% if show_organization_tab? %>
        <div class="tab-pane" id="organizations">
          <%= organization_selects f, @proxy.organization_ids, {:disabled => @proxy.used_organization_ids} %>
        </div>
      <% end %>

    </div>
  <% end %>

  <%= submit_or_cancel f %>
<% end %>
